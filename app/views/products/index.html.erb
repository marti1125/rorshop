<%= link_to 'Main', {:controller => 'welcomes', :action => :index}, {:class => 'btn btn-info'} %>
<h1>Listing Products</h1>
<%= link_to 'New Product', {:controller => 'products', :action => :new}, {:class => 'btn btn-primary'} %>
<br/><br/>
<table class="table">
  <tr>
  	<th>Type</th> 
    <th>Description</th>
    <th>Amount</th>     
  </tr>
  <% @products.each do |product| %>
  <tr>
  	<td><%= product.type %></td>
  	<td><%= product.description %></td>
  	<td><%= product.amount %></td>
  </tr>
  <% end %>
  
</table>